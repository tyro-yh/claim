<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- ============================================================== -->
<!-- ================可直接使用Base配置文件中定义的节点！================ -->
<!-- ============================================================== -->
<mapper namespace="com.claim.server.settlement.dao.BLossPersonDao">
    <delete id="deleteBySettlementNo" parameterType="string">
        DELETE FROM b_loss_person WHERE ReportNo = #{reportNo} AND SettlementNo = #{settlementNo}
    </delete>

    <select id="selectBySettlementNo" parameterType="string" resultType="com.claim.server.settlement.po.BLossPerson">
        SELECT * FROM b_loss_person WHERE SettlementNo = #{settlementNo}
    </select>
</mapper>