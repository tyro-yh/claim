<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- ============================================================== -->
<!-- ================可直接使用Base配置文件中定义的节点！================ -->
<!-- ============================================================== -->
<mapper namespace="com.claim.server.person.dao.BPersonInjuredDao">
    <delete id="deleteByPersonId" parameterType="map">
        DELETE FROM b_person_injured WHERE ReportNo = #{reportNo} AND PersonId = #{personId}
    </delete>

    <select id="selectByPersonId" parameterType="integer" resultType="com.claim.server.person.po.BPersonInjured">
        SELECT * FROM b_person_injured WHERE PersonId = #{personId}
    </select>
</mapper>